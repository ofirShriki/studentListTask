<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddStudentActivity">

    <ImageView
        android:id="@+id/add_student_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/add_student_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/add_student_avatar"
        app:layout_constraintTop_toTopOf="@+id/add_student_avatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/add_student_id_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="id"
        app:layout_constraintStart_toStartOf="@+id/add_student_name_input"
        app:layout_constraintTop_toBottomOf="@+id/add_student_name_input"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/add_student_phone_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="phone"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/add_student_name_input"
        app:layout_constraintTop_toBottomOf="@+id/add_student_id_input"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/add_student_address_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="address"
        app:layout_constraintStart_toStartOf="@+id/add_student_name_input"
        app:layout_constraintTop_toBottomOf="@+id/add_student_phone_input"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/add_student_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="checked"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_student_avatar" />

    <Button
        android:id="@+id/add_student_cancel_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_student_save_button"/>

    <Button
        android:id="@+id/add_student_save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_student_cancel_button"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>